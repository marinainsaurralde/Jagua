@model Gambling.Domain.Entities.usuarios

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3> </h3>
            </div>
            <div class="title_right">

            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">

                    <div class="x_content">
                        <br />
                        @if (ViewBag.msg != null)
                        {
                            <div class="alert alert-danger">
                                @ViewBag.msg
                            </div>
                        }
                        <div id="flash-messages" class="alert alert-success" style="display:none;">
                            <a class="close" href="#">&times;</a>
                            <p></p>
                        </div>
                        @using (Html.BeginForm("RecuperarPassword", "Login", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
                        {
                            <div class="form-horizontal">
                                <h4>Recuperar Contraseña</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.AntiForgeryToken()

                                @if (ViewBag.recuperar == "recuperar")
                                {
                                    <div class="form-group">
                                        @*@Html.LabelFor(model => model.usuario, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                        @Html.Label("Usuario", "Usuario", new { @class = " col-md-2" })
                                        <div class="col-md-3">
                                            @Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                            @Html.ValidationMessageFor(model => model.usuario, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-2 col-sm-2 col-xs-2 ">
                                            <input type="submit" value="Enviar" class="btn btn-success" />
                                        </div>
                                        <div class="col-md-2 col-sm-2 col-xs-2 ">
                                            @Html.ActionLink("Ir al inicio", "Index", new { controller = "Login" }, new { @class = "btn btn-primary" })

                                        </div>
                                    </div>
                                    
                                }
                                else
                                {
                                    <div class="form-group">
                                        <div class="col-md-10">

                                            <h4>La contraseña se modificó correctamente, verifique su correo electrónico para obtener más información</h4>
                                         </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-3 col-sm-3 col-xs-6 col-md-offset-3">
                                            @Html.ActionLink("Ir al inicio", "Index", new { controller = "Login" }, new { @class = "btn btn-primary" })

                                        </div>
                                    </div>

                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

